<div class="jumbotron">
  <h2 class="center comic-font">Login</h2>
  <%= form_with scope: :session, url: login_path do |f| %>
    <div class="form-group row">
      <label class="control-label col-sm-2">
        <%= f.label :email %>
      </label>
      <div class="col-sm-8">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "form-control" %>
      </div>
    </div>
    <div class="form-group row">
      <label class="control-label col-sm-2">
        <%= f.label :password %>
      </label>
      <div class="col-sm-8">
        <%= f.password_field :password, autocomplete: "off", :class => "form-control" %>
      </div>
    </div>
    <br>
    <div class="center">
      <%= f.submit "Log in", class: "btn btn-outline-dark btn-sm" %>
    </div>
  <% end %> 
  <div class="center">
    <br>
    <%= link_to 'Sign Up', signup_path, class: "btn btn-outline-dark btn-sm" %>
    <br><br>
    <%= link_to "Back to Home", root_path, class: "btn btn-light btn-sm" %>
  </div>
</div>
